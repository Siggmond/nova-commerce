rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null && request.auth.uid is string && request.auth.uid.size() > 0;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    function isNonEmptyString(v) {
      return v is string && v.size() > 0;
    }

    match /products/{productId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /home_config/{docId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /carts/{uid} {
      allow read: if isSignedIn() && request.auth.uid == uid;
      allow create, update: if isSignedIn()
        && request.auth.uid == uid
        && request.resource.data.uid == uid
        && request.resource.data.items is list
        && request.resource.data.items.all(i,
          i is map
          && isNonEmptyString(i.productId)
          && i.quantity is int
          && i.quantity > 0
          && isNonEmptyString(i.selectedColor)
          && isNonEmptyString(i.selectedSize)
        );
      allow delete: if false;
    }

    match /orders/{orderId} {
      // Orders are created by Cloud Functions (Admin SDK). Clients cannot create.
      allow create: if false;
      allow read: if isAdmin() || (isSignedIn() && resource.data.uid == request.auth.uid);
      allow update, delete: if isAdmin();
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
